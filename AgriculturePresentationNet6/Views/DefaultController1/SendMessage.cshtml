@model EntityLayer.Concrete.Contact

<div class="col-md-9 contact-middle">
	<h2>Bize Danışın</h2>
	@using (Html.BeginForm("SendMessage", "DefaultController1", FormMethod.Post))
	{
		<div class="form-agileinfo">
			<p>Adınız Soyadınız</p>
			<input type="text" asp-for="Name" placeholder="ad soyad" required="" />
			<p>Mail Adresiniz</p>
			<input type="email" asp-for="Mail" placeholder="mail adresi" required="" />
		</div>
		<div class="form-agileits-w3layouts">
			<p>Mesajınız</p>
			<textarea asp-for="Message" placeholder="mesajınızı yazın" required=""></textarea>
			<input type="submit" value="Mesajı Gönder">
		</div>
		<div class="clearfix"></div>
	}
</div>
